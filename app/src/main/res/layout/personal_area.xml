<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon2"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:layout_gravity="start" />

    <ImageButton
        android:id="@+id/buttonSearch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/search"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Search"
        android:layout_gravity="end" />
    <TextView
        android:id="@+id/textViewPersonalArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Личный кабинет"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Доброе кофе, Username"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />


    <Button
        android:id="@+id/buttonPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#FFEB43"
        android:text="Накопленные баллы: 15"
        android:textColor="@android:color/black" />

    <!-- Слово "Меню" -->
    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новинки в меню"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/imageViewCoffee1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/image1"
            android:layout_marginEnd="16dp"
            android:contentDescription="Coffee 1" />

        <ImageView
            android:id="@+id/imageViewCoffee2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/image2"
            android:contentDescription="Coffee 2" />
    </LinearLayout>


    <Button
        android:id="@+id/buttonOrderDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#FFEA23"
        android:text="Заказать доставку"
        android:textColor="@android:color/black" />
</LinearLayout>